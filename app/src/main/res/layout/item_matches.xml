<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_rectangle_rounded_stroke"
    android:orientation="vertical"
    android:backgroundTint="@color/colorTeamCardBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_half_rounded"
        android:backgroundTint="@color/purple_500"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            tools:text="12 March 2019 Monday 20.30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:minLines="2"
                android:padding="0dp"
                android:textAlignment="center"
                android:textColor="@color/colorTitle"
                android:textSize="16sp"
                tools:text="Borissia Dortmund" />

            <ImageView
                android:id="@+id/iv_home_team"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                tools:src="@drawable/okuyan_balik_bg" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minLines="2"
            android:padding="0dp"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="2:2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_other_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:minLines="2"
                android:padding="0dp"
                android:textAlignment="center"
                android:textColor="@color/colorTitle"
                android:textSize="16sp"
                tools:text="Borissia Dortmund" />

            <ImageView
                android:id="@+id/iv_other_team"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                tools:src="@drawable/okuyan_balik_bg" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>